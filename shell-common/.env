#!/bin/bash
# --------------------------------------------------------------------
# environment
# --------------------------------------------------------------------

export EDITOR=emacs

export PATH=/bin:/usr/bin:/usr/local/bin:/sbin:/usr/sbin:/usr/local/sbin:$HOME/bin:$HOME/src/scripts:$HOME/.gem/ruby/2.1.0/bin:$HOME/CS/src:$HOME/.local/bin

export PYTHONPATH=$HOME/.python/python2.7/site-packages

export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH

export QT_SELECT=5

